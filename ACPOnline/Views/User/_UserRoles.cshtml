@model ACPOnline.Models.UserViewModel

<div id="addRolesModal" class="modal fade edit-message-modal all-calendar-notification" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">

                <button type="button" class="close" title="Close" data-dismiss="modal">
                    <span class="fa fa-times"></span>
                    <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title">User Roles</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Select the Roles of User</label>
                </div>
                <div class="form-group row">
                    @Html.ListBoxFor(m => m.User.UserRoles, new MultiSelectList(Model.UserAccess, "RoleId", "RoleName"), new { @class = "form-control selectUserMulti", @multiple = "multiple" }) 
                </div>
                
                
            </div>
            <div class="box-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-info pull-right" id="addArtifactsBtn">Add</button>
            </div>
        </div>

    </div>
</div>