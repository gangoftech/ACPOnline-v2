
@model ACPOnline.Models.UserViewModel

<div class="row">
    <div class="col-xs-12">
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">Users</h3>
                <div class="box-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">
                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.User.UserId)</th>
                        <th>@Html.DisplayNameFor(m => m.User.UserName)</th>
                        <th>@Html.DisplayNameFor(m => m.User.LoginId)</th>
                        <th>View / Edit</th>
                    </tr>
                    <tr>
                        @{ Html.RenderPartial("_SearchResults", Model.UserList); }
                    </tr>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>

